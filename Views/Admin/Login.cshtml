@model Asteria.Models.Admin.UserLogin

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://bootstraptema.ru/stuff/0-0-0-357-20" />
<script type="text/javascript" src="https://bootstraptema.ru/plugins/jquery/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="https://bootstraptema.ru/plugins/2015/b-v3-3-6/bootstrap.min.js"></script>



@{
    ViewData["Title"] = "Login";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   
</head>
<body>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 well">
                <h3 class="text-center">Вход</h3>

                <form asp-action="Login" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="col-xs-12">
                        <div class="form-group">
                            <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Пароль" />
                        </div>
                    </div>



                    <div class="text-center col-xs-12">
                        <button type="submit" class="btn btn-default">Войти</button>
                    </div>
                </form>






            </div>
        </div>
    </div>






</body>
</html>

